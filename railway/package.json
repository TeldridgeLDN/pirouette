{
  "name": "pirouette-railway-worker",
  "version": "1.0.0",
  "description": "Railway analysis worker for Pirouette design analyzer",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "start:all": "npm run start & npm run start:worker",
    "dev": "tsx watch src/server.ts",
    "dev:worker": "tsx watch src/worker.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:worker\"",
    "test": "node dist/analyzer/index.js",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "bullmq": "^4.15.0",
    "cron": "^3.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "playwright": "^1.40.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/cron": "^2.4.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
